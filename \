#include "product.h"


int main() {
	int input;
	Product product;
	do {
		printMenu();
			
	} while(input != 0);
}


int printMenu() {
	int choice; 
	printf("\n****************************\n");
	printf("1: 제품 등록\n");
	printf("2: 제품 보기\n");
	printf("3: 제품 삭제\n");
	printf("4: 제품 파일 저장\n");
	printf("5: 제품 파일 불러오기\n");
	printf("6: 제품 찜하기\n");
	printf("7: 찜한 제품 보기\n");
	printf("8: 배송 방법 별 제품 보기\n");
	printf("0: 프로그램 종료\n");
	printf("*****************************\n");
	printf("입력 >>  ");
	scanf("%d", &choice);
}

// 제품 추가 함수
int createProduct(Product *p) {
	printf("제품의 이름 입력: ");
	scanf("%s", p->pname);
	printf("설명 입력: ");
	scanf("%s", p->des);
	printf("중량 입력: ");
	scanf("%s", p->weight);
	printf("판매 가격 입력: ");
	scanf("%d", &(p->price));
	printf("배송방법(1: 새벽배송/ 2: 택배배송) : ");
	scanf("%d", &(p->choice));
	p->reserved = 0;
}
